import os
from openpyxl import load_workbook, Workbook
from openpyxl.utils.dataframe import dataframe_to_rows
import pandas as pd

# üìÇ Path to folder with 45 Excel files (update this path!)
input_folder = "./workbooks"
output_file = "TestResults.xlsx"

# Create the final merged workbook
merged_wb = Workbook()
merged_wb.remove(merged_wb.active)  # Remove default empty sheet

# Loop through each workbook file
for file_name in os.listdir(input_folder):
    if file_name.endswith(".xlsx"):
        file_path = os.path.join(input_folder, file_name)
        wb_name = os.path.splitext(file_name)[0]  # e.g., DIM_COA

        print(f"\nüìÑ Processing workbook: {file_name}")

        try:
            wb = load_workbook(file_path, data_only=True)
        except Exception as e:
            print(f"‚ùå Error reading {file_name}: {e}")
            continue

        # Create corresponding sheet in output workbook
        target_ws = merged_wb.create_sheet(title=wb_name)
        current_row = 1

        for sheet_name in wb.sheetnames:
            print(f"   üìÑ Reading sheet: {sheet_name}")
            try:
                df = pd.read_excel(file_path, sheet_name=sheet_name)

                # Write section title (sheet name) in Column A
                target_ws.cell(row=current_row, column=1, value=sheet_name.capitalize())

                # Write DataFrame starting from column B
                for r_idx, row in enumerate(dataframe_to_rows(df, index=False, header=True), start=current_row + 1):
                    for c_idx, value in enumerate(row, start=2):
                        target_ws.cell(row=r_idx, column=c_idx, value=value)

                # Add 5 blank rows before next section
                current_row = r_idx + 6

            except Exception as e:
                print(f"   ‚ö†Ô∏è Error reading sheet '{sheet_name}' in {file_name}: {e}")

# Save the final result
merged_wb.save(output_file)
print(f"\n‚úÖ All workbooks merged successfully into '{output_file}'")
